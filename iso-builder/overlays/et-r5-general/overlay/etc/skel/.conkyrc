conky.config = {
    alignment = 'top_right',
    gap_x = 8,
    gap_y = 10,
    update_interval = 2.0,
    double_buffer = true,
    background = false,
    use_xft = true,
    font = 'DejaVu Sans Mono:size=7',
    own_window = true,
    own_window_type = 'desktop',
    own_window_transparent = true,
    own_window_hints = 'undecorated,below,sticky,skip_taskbar,skip_pager',
    draw_borders = true,
    draw_outline = false,
    draw_shades = true,
    default_color = 'darkgray',
    minimum_width = 200,
};

conky.text = [[
${font DejaVu Sans:bold:size=8}${color #CCCCCC}${alignc}DATE/TIME
${font DejaVu Sans Mono:size=10}${color #888888}${alignc}${time %Y-%m-%d}
 Local: ${alignr}${time %H:%M:%S} 
 UTC: ${alignr}${tztime UTC %H:%M:%S} 
 GPS Time: ${alignr}${execpi 30 et-system-info et-time} 

${font DejaVu Sans:bold:size=8}${color #CCCCCC}${alignc}SYSTEM
${font DejaVu Sans Mono:size=10}${color #888888} Uptime   : ${uptime}
 CPU Util : ${cpu}%
 Disk Free: ${fs_free /}

${font DejaVu Sans:bold:size=8}${color #CCCCCC}${alignc}NETWORK
${font DejaVu Sans Mono:size=10}${color #888888} IP: ${execpi 60 /opt/emcomm-tools/bin/et-system-info ip} 

${font DejaVu Sans:bold:size=8}${color #CCCCCC}${alignc}INTERFACES
${font DejaVu Sans Mono:size=10}${color #888888} Radio: ${execpi 10 et-system-info active-radio}
 CAT  : ${execpi 10 et-system-info et-cat}
 GPS  : ${execpi 10 et-system-info et-gps}
 Audio: ${execpi 10 et-system-info et-audio}
 ${if_existing /dev/et-sdr}SDR  : ${execpi 10 et-system-info et-sdr}${endif}

${font DejaVu Sans:bold:size=8}${color #CCCCCC}${alignc}OPERATOR
${font DejaVu Sans Mono:size=10}${color #888888} Callsign: ${color orange}${execpi 10 et-system-info callsign}
 ${color #888888}Grid    : ${execpi 10 et-system-info grid} 

${font DejaVu Sans:bold:size=8}${color #CCCCCC}${alignc}MODE
${font DejaVu Sans:bold:size=10}${color #888888}${alignc}${execpi 10 et-system-info et-mode}

${font DejaVu Sans:bold:size=7}${color #333333}${alignc}${execp /opt/emcomm-tools/bin/et-system-info release}
]];

